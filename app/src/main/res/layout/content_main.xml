<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:filterTouchesWhenObscured="true"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="请输入您的助记词"
                    android:textColor="#FF353F57"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtitle"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <EditText
                            android:id="@+id/word1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word2"
                            android:theme="@style/InputMnemonicStyle" />


                        <EditText
                            android:id="@+id/word2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word3"
                            android:theme="@style/InputMnemonicStyle" />

                        <EditText
                            android:id="@+id/word3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word4"
                            android:theme="@style/InputMnemonicStyle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <EditText
                            android:id="@+id/word4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word5"
                            android:theme="@style/InputMnemonicStyle" />


                        <EditText
                            android:id="@+id/word5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word6"
                            android:theme="@style/InputMnemonicStyle" />

                        <EditText
                            android:id="@+id/word6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word7"
                            android:theme="@style/InputMnemonicStyle" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <EditText
                            android:id="@+id/word7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word8"
                            android:theme="@style/InputMnemonicStyle" />

                        <EditText
                            android:id="@+id/word8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word9"
                            android:theme="@style/InputMnemonicStyle" />

                        <EditText
                            android:id="@+id/word9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word10"
                            android:theme="@style/InputMnemonicStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <EditText
                            android:id="@+id/word10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word11"
                            android:theme="@style/InputMnemonicStyle" />


                        <EditText
                            android:id="@+id/word11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/word12"
                            android:theme="@style/InputMnemonicStyle" />

                        <EditText
                            android:id="@+id/word12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusForward="@+id/importBtn"
                            android:theme="@style/InputMnemonicStyle"/>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/importBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="导入" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择币种:"
                        android:textColor="#FF353F57"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:layout_marginLeft="20dp"
                        android:id="@+id/currencySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/currencies" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="私钥:"
                    android:textColor="#FF353F57"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/privkey_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0000000"
                    android:textColor="#FF353F57"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="地址:"
                    android:textColor="#FF353F57"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/addr_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0000000"
                    android:textColor="#FF353F57"
                    android:textSize="18sp"/>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>